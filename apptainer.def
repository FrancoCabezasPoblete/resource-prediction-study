BootStrap: docker
From: python:3.10-slim

%files
   ./benchmarks /benchmarks
   ./src /src
   ./run_benchmarks.sh /run_benchmarks.sh
%environment
   export SA_INSTANCES=/benchmarks/simulated_annealing/instancias
%post
   apt-get update && apt-get install -y git ltrace strace make g++ valgrind sysstat time
   apt-get autoremove -y && apt-get clean
   pip install --no-cache-dir -r /src/requirements.txt
   cd /benchmarks/simulated_annealing && make && cd /src
   chmod +x /run_benchmarks.sh
%runscript
   /run_benchmarks.sh

%labels
   Author Franco Cabezas
   Version v0.0.1